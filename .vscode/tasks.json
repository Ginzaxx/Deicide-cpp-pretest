{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Game",
            "type": "shell",
            "command": "g++",
            "args": [
                "src/main.cpp",
                "src/Cards/BaseCard.cpp",
                "src/Cards/CardRegistry.cpp",
                "src/Cards/Deck.cpp",
                "-I",
                "src",
                "-I",
                "src/Cards",
                "-o",
                "game.exe"
